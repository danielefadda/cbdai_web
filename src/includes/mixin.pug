//- portfolio
mixin portfolio(style, column, isReadMore=false, ...items)
  // Portfolio
  div.row.portfolio(class=style)
    each item in items
      div(class=column)
        article
          figure.entry-media
            if item.image
              img.lozad(src=item.image, data-src=item.image, alt='Entry Image')
          .entry-content-wrapper
            header.entry-header
              .entry-meta-top
                span.entry-meta-category
                  a(href='portfolio.html')= item.category
              h2.entry-title
                a(href='portfolio-single-project.html')= item.title
            if item.content
              .entry-content
                p= item.content
  // End Portfolio
