//- page title
mixin pagetitle(data)
  // Page Title
  .page-main-title
    .container
      .row.align-items-center
        .col-lg-12
          if data.title
            h1.entry-title= data.title
          else
            h1.entry-title Page Title
        .col-lg-6
          if data.description
            p= data.description
          else
            p Duis auctor eros ac urna dictum, eget rhoncus ex fringilla. Vestibulum in ex massa. Sed accumsan tortor libero. Phasellus gravida nibh vel odio semper vitae.

  // End Page Title

mixin entryMetaTop(author, categories, date, commentCount, isEdit=false )
  .entry-meta-top
    if categories
      span.entry-meta-category
        i.fas.fa-folder
        a(href='blog-three-col.html')= categories
    if author
      span.entry-author
        i.far.fa-user
        = author
    if date
      span.entry-meta-date
        i.far.fa-clock
        = date
    if commentCount
      span.entry-comment-count
        a(href="blog-single-post.html#comments")
          i.far.fa-comment-alt
          = commentCount
    if isEdit
      span.entry-comment-count
        a(href="#")
          i.far.fa-edit
          | Edit

//- Blog
mixin blog(style, column, isReadMore=false, ...items)
  // Blog
  div.row.gx-lg-5.blog-post(class=style)
    each item in items
      div(class=column)
        article
          figure.entry-media
            if item.image
              img(src=item.image, alt="Entry Image")
          .entry-content-wrapper
            header.entry-header
              +entryMetaTop(item.author, item.category, item.date, item.commentCount, item.isEdit)
              h2.entry-title
                a(href='blog-single-post.html')= item.title
            if item.content
              .entry-content
                p= item.content
              if isReadMore
                footer.entry-footer
                  a.entry-read-more(href='blog-single-post.html') Read More
                    i.fas.fa-long-arrow-alt-right.ml-1
  // End Blog

//- Blog list style
mixin blogList(style, column,isReadMore=false, ...items)
  // Blog
  div.row.blog-post.blog-list-style(class=style)
    each item in items
      div(class=column)
        article
          .entry-media
            img(src=item.image, alt="Entry Image")
          .entry-content-wrapper
            h5.entry-title
              a(href='blog-single-post.html')= item.title
            .entry-meta-top
              span.entry-meta-category
                a(href='blog-three-col.html')= item.category
              span.post-meta-date= item.date
            if item.content
              .entry-content
                p= item.content
              if isReadMore
                a.entry-read-more(href='blog-single-post.html') Read More
                  i.fas.fa-long-arrow-alt-right.ml-1
  // End Blog

//- Shop - Products
mixin shop(isProductsFilter=true, style, column, ...items)
  // Products
  if isProductsFilter
    .shop-item-toolbar.d-md-flex.justify-content-between.align-items-center
      .item-result-count.mb-3.mb-md-0 Showing 1-12 of 18
      .items-ordering
        select.form-control.orderby(name='orderby')
          option(value='menu_order', selected='selected') Default sorting
          option(value='popularity') Sort by popularity
          option(value='rating') Sort by average rating
          option(value='date') Sort by newness
          option(value='price') Sort by price: low to high
          option(value='price-desc') Sort by price: high to low
  div.row.products(class=style)
    each item in items
      div.product(class=column)
        .product-img-wrapper
          img(src=item.image, alt="Product Image")
          a.btn.btn-dark.btn-add-to-cart(href='shop-single-product.html') Add to cart
            i.fas.fa-shopping-cart.ml-1
        .product-content-wrapper
          h2.product-title
            a(href='shop-single-product.html')= item.title
          span.price
            span.amount
              span.currencySymbol $
                = item.price
  // End Products

//- pagination
mixin pagination
  // Pagination
  nav.pagination-holder
    ul.pagination
      li.page-item.active
        a.page-link(href='#') 1
      li.page-item
        a.page-link(href='#') 2
      li.page-item
        a.page-link(href='#') 3
      li.page-item
        a.page-link(href='#') 4
      li.page-item
        a.page-link(href='#', aria-label='Next')
          span >
          span.sr-only Next
  // End Pagination


