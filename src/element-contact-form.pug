extends includes/layout
include includes/mixin

block content
    //- Page title
    .mb-lg-9.mb-md-7.mb-5
      +pagetitle({title:'Contact Form', description:''})
    // Contact Form
    .container
      .row.large-gutters
        .col-lg-3.mb-7
          //- Elements nav
          include includes/elements-nav
        .col-lg-9.mb-7
          .home-hero.px-5.py-6
            .container
              .row
                .col-10
                  h1.mb-2.mb-lg-2 Let's talk about everything
                  p.lead Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.
              
            .container.mt-lg-5.mt-5  
              .row
                .col-12
                    .has-white-background-color.py-6.px-4.py-lg-6.px-lg-5
                      form(action='#')
                        .mb-3.mb-lg-4
                          input#fname.form-control(type='text' name='fname' value='First Name')
                        .mb-3.mb-lg-4
                          input#lname.form-control(type='text' name='lname' value='Email')
                        .mb-3.mb-lg-4
                          input#lname.form-control(type='text' name='lname' value='Subject')
                        .mb-3.mb-lg-4
                          textarea.form-control(rows='6', cols='50', name='comment', form='usrform') Message  
                        .mb-lg-4
                          a.btn.btn-default.rounded-0.d-block.d-md-inline-block(href='#') Submit
                      