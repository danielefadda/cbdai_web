  .mb-lg-9.mb-md-7.mb-5
    +pagetitle({title:'Analisi economiche e socio-demografiche', description:'Big Data analytics nel settore economico e socio-demografico'})
  .container
    .row.large-gutters
      .col-lg-4.mb-7
